version: '3.8'

services:
  museum:
    image: ghcr.io/ente-io/server
    ports:
      - {{ .MuseumPort }}:8080
    volumes:
      - ./museum.yaml:/museum.yaml:ro
      - ./data:/data:ro
    depends_on:
      postgres:
        condition: service_healthy

  socat:
    image: alpine/socat
    network_mode: service:museum
    depends_on: [museum]
    command: "TCP-LISTEN:3200,fork,reuseaddr TCP:minio:3200"

  web:
    image: ghcr.io/ente-io/web
    ports:
      - {{ index .WebPorts "photos" }}:3000
      - {{ index .WebPorts "albums" }}:3002
    environment:
      ENTE_API_ORIGIN: https://api.ente.{{ .Domain }}
      ENTE_ALBUMS_ORIGIN: https://albums.ente.{{ .Domain }}

  postgres:
    image: postgres:15
    environment:
      POSTGRES_USER: pguser
      POSTGRES_PASSWORD: {{ .DB.Password }}
      POSTGRES_DB: ente_db
    healthcheck:
      test: pg_isready -q -d ente_db -U pguser
      start_period: 40s
    volumes:
      - postgres-data:/var/lib/postgresql/data

  minio:
    image: minio/minio
    ports:
      - 3200:3200
    environment:
      MINIO_ROOT_USER: {{ .Minio.Key }}
      MINIO_ROOT_PASSWORD: {{ .Minio.Secret }}
    command: server /data --address ":3200" --console-address ":3201"
    volumes:
      - minio-data:/data
    post_start:
      - command: |
          sh -c '
          #!/bin/sh

          while ! mc alias set h0 http://minio:3200 {{ .Minio.Key }} {{ .Minio.Secret }} 2>/dev/null
          do
            echo "Waiting for minio..."
            sleep 0.5
          done

          cd /data

          mc mb -p b2-eu-cen
          mc mb -p wasabi-eu-central-2-v3
          mc mb -p scw-eu-fr-v3
          '

  caddy:
    image: caddy:2-alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - caddy_data:/data
      - caddy_config:/config
    depends_on:
      - museum
      - web

volumes:
  postgres-data:
  minio-data:
  caddy_data:
  caddy_config: